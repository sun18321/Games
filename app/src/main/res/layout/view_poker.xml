<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="96dp">


        <ImageView
            android:background="@drawable/poker_front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_centerInParent="true"
            android:src="@mipmap/poker_diamond_k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/number"
                android:src="@mipmap/img_poker_king_red"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <ImageView
                android:src="@mipmap/poker_heart"
                android:layout_below="@+id/number"
                android:layout_alignEnd="@+id/number"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignStart="@+id/number"/>


        </RelativeLayout>



    </RelativeLayout>






</RelativeLayout>
